{
  "name": "biohubbc-api",
  "version": "0.0.0",
  "description": "API for BioHubBC App",
  "license": "Apache-2.0",
  "main": "app",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/biohubbc.git"
  },
  "scripts": {
    "start": "ts-node src/app",
    "clean": "gulp clean",
    "build": "gulp build",
    "start:reload": "./node_modules/.bin/nodemon src/app.ts --exec ts-node",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "coverage": "nyc mocha",
    "lint": "eslint . --ignore-pattern 'node_modules' --ext .ts",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .ts",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,css,scss}\""
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "ajv": "~6.12.6",
    "aws-sdk": "~2.742.0",
    "axios": "~0.21.1",
    "body-parser": "~1.19.0",
    "db-migrate": "~0.11.11",
    "db-migrate-pg": "~1.2.2",
    "express": "~4.17.1",
    "express-openapi": "~7.0.1",
    "fast-json-patch": "~3.0.0-1",
    "js-base64": "~3.4.5",
    "json-schema-traverse": "~0.5.0",
    "jsonwebtoken": "~8.5.1",
    "jwks-rsa": "~1.9.0",
    "knex": "~0.21.4",
    "memory-cache": "~0.2.0",
    "moment": "~2.29.1",
    "pg": "~8.5.1",
    "qs": "~6.9.4",
    "sql-template-strings": "~2.2.2",
    "swagger-object-validator": "~1.2.2",
    "typescript": "~4.1.3",
    "uuid": "~8.3.2",
    "validator": "~13.1.1",
    "winston": "~3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@types/body-parser": "~1.19.0",
    "@types/chai": "~4.2.12",
    "@types/express": "~4.17.0",
    "@types/express-openapi": "~1.9.0",
    "@types/geojson": "~7946.0.3",
    "@types/gulp": "~4.0.6",
    "@types/jsonwebtoken": "~8.5.0",
    "@types/memory-cache": "~0.2.1",
    "@types/mocha": "~8.0.1",
    "@types/pg": "~7.14.4",
    "@types/uuid": "~8.3.0",
    "@types/yamljs": "~0.2.31",
    "@typescript-eslint/eslint-plugin": "~3.7.1",
    "@typescript-eslint/parser": "~3.7.1",
    "chai": "~4.2.0",
    "del": "~6.0.0",
    "eslint": "~7.5.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-prettier": "~3.1.4",
    "gulp": "~4.0.2",
    "gulp-typescript": "~5.0.1",
    "mocha": "~8.2.1",
    "nock": "~13.0.3",
    "nodemon": "~2.0.7",
    "npm-run-all": "~4.1.5",
    "nyc": "~15.1.0",
    "prettier": "~2.2.1",
    "supertest": "~6.0.1",
    "ts-mocha": "~8.0.0",
    "ts-node": "~9.1.1"
  }
}
