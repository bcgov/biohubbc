{
  "name": "sims-utils",
  "version": "0.0.0",
  "description": "Template utility scripts for SIMS",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/biohubbc.git"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  },
  "scripts": {
    "build:validation": "ts-node ./src/utils/templates/validation-config-builder.ts",
    "build:transformation": "ts-node ./src/utils/templates/transformation-config-builder.ts",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "format:fix": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss}\""
  },
  "devDependencies": {
    "@types/node": "~14.14.31",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "ajv": "~8.12.0",
    "eslint": "~7.32.0",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-prettier": "~3.3.1",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "~2.3.4",
    "ts-node": "~10.4.0",
    "typescript": "~4.1.6"
  }
}
